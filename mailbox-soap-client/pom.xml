<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="http://maven.apache.org/POM/4.0.0"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>
  <name>carbonio-mailbox-soap-client</name>
  <packaging>jar</packaging>
  <artifactId>mailbox-soap-client</artifactId>

  <parent>
    <groupId>zextras</groupId>
    <version>${revision}</version>
    <artifactId>zm-mailbox</artifactId>
  </parent>
  <dependencies>
    <dependency>
      <groupId>com.sun.xml.ws</groupId>
      <artifactId>jaxws-rt</artifactId>
      <version>2.3.6</version>
    </dependency>
    <dependency>
      <groupId>com.sun.xml.bind</groupId>
      <artifactId>jaxb-impl</artifactId>
      <version>4.0.3</version>
    </dependency>
  </dependencies>
  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <artifactId>jaxws-maven-plugin</artifactId>
          <configuration>
            <args>
              <arg>-B-XautoNameResolution</arg>
              <arg>-XadditionalHeaders</arg>
            </args>
            <wsdlFiles>
              <wsdlFile>${project.parent.basedir}/soap/target/classes/com/zimbra/soap/ZimbraService.wsdl</wsdlFile>
            </wsdlFiles>
          </configuration>
          <executions>
            <execution>
              <goals>
                <goal>wsimport</goal>
              </goals>
            </execution>
          </executions>
          <groupId>org.codehaus.mojo</groupId>
          <version>2.6</version>
        </plugin>
      </plugins>
    </pluginManagement>
    <plugins>
      <plugin>
        <artifactId>jaxws-maven-plugin</artifactId>
        <groupId>org.codehaus.mojo</groupId>
      </plugin>
    </plugins>
  </build>
</project>
