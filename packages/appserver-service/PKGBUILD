pkgname="carbonio-appserver-service"
pkgver="4.23.5"
pkgrel="1"
pkgdesc="Carbonio Mailbox Service"
arch=('x86_64')
maintainer="Zextras <packages@zextras.com>"
copyright=(
  "2022-2024, Zextras <https://www.zextras.com>"
  "2022, Synacor, Inc."
)
license=(
  "GPL-2.0-only"
)
url="https://github.com/zextras"
depends=(
  "service-discover"
  "pending-setups"
)

section="mail"
priority="optional"

source=(
  "systemd-sysuser.conf"
)

sha256sums=(
  'e153e64827d0401afde735249e21f99eaeb8a053b9b0dc643ea8fbcd8c876ece'
)

_package() {
  cd "$(dirname "$(find / -name "yap.json" -print -quit)")/.."

  # Mailbox
  install -Dm755 packages/appserver-service/carbonio-mailbox \
    "${pkgdir}/usr/bin/carbonio-mailbox"
  install -Dm644 packages/appserver-service/411-carbonio-mailbox.sh \
    "${pkgdir}/etc/zextras/pending-setups.d/411-carbonio-mailbox.sh"
  install -Dm644 packages/appserver-service/carbonio-mailbox.hcl \
    "${pkgdir}/etc/zextras/service-discover/carbonio-mailbox.hcl"
  install -Dm644 packages/appserver-service/carbonio-mailbox-intentions.json \
    "${pkgdir}/etc/carbonio/mailbox/service-discover/intentions.json"
  install -Dm644 packages/appserver-service/carbonio-mailbox-policies.json \
    "${pkgdir}/etc/carbonio/mailbox/service-discover/policies.json"
  install -Dm644 packages/appserver-service/carbonio-mailbox-service-protocol.json \
    "${pkgdir}/etc/carbonio/mailbox/service-discover/service-protocol.json"

  # Mailbox Admin
  install -Dm755 packages/appserver-service/carbonio-mailbox-admin \
    "${pkgdir}/usr/bin/carbonio-mailbox-admin"
  install -Dm644 packages/appserver-service/421-carbonio-mailbox-admin.sh \
    "${pkgdir}/etc/zextras/pending-setups.d/421-carbonio-mailbox-admin.sh"
  install -Dm644 packages/appserver-service/carbonio-mailbox-admin.hcl \
    "${pkgdir}/etc/zextras/service-discover/carbonio-mailbox-admin.hcl"
  install -Dm644 packages/appserver-service/carbonio-mailbox-admin-intentions.json \
    "${pkgdir}/etc/carbonio/mailbox-admin/service-discover/intentions.json"
  install -Dm644 packages/appserver-service/carbonio-mailbox-admin-policies.json \
    "${pkgdir}/etc/carbonio/mailbox-admin/service-discover/policies.json"
  install -Dm644 packages/appserver-service/carbonio-mailbox-admin-service-protocol.json \
    "${pkgdir}/etc/carbonio/mailbox-admin/service-discover/service-protocol.json"

  # Mailbox NSLookup
  install -Dm755 packages/appserver-service/carbonio-mailbox-nslookup \
    "${pkgdir}/usr/bin/carbonio-mailbox-nslookup"
  install -Dm644 packages/appserver-service/411-carbonio-mailbox-nslookup.sh \
    "${pkgdir}/etc/zextras/pending-setups.d/411-carbonio-mailbox-nslookup.sh"
  install -Dm644 packages/appserver-service/carbonio-mailbox-nslookup.hcl \
    "${pkgdir}/etc/zextras/service-discover/carbonio-mailbox-nslookup.hcl"
  install -Dm644 packages/appserver-service/carbonio-mailbox-nslookup-intentions.json \
    "${pkgdir}/etc/carbonio/mailbox-nslookup/service-discover/intentions.json"
  install -Dm644 packages/appserver-service/carbonio-mailbox-nslookup-policies.json \
    "${pkgdir}/etc/carbonio/mailbox-nslookup/service-discover/policies.json"
  install -Dm644 packages/appserver-service/carbonio-mailbox-nslookup-service-protocol.json \
    "${pkgdir}/etc/carbonio/mailbox-nslookup/service-discover/service-protocol.json"

  # systemd sysusers.d
  install -Dm644 packages/appserver-service/systemd-sysuser.conf \
    "${pkgdir}/usr/lib/sysusers.d/carbonio-appserver-service.conf"
}

_package_legacy() {
  # systemd unit
  install -Dm644 packages/appserver-service/carbonio-appserver.service \
    "${pkgdir}/usr/lib/systemd/system/carbonio-appserver.service"
  install -Dm644 packages/appserver-service/carbonio-mailbox-sidecar-legacy.service \
    "${pkgdir}/usr/lib/systemd/system/carbonio-mailbox-sidecar.service"
  install -Dm644 packages/appserver-service/carbonio-mailbox-admin-sidecar-legacy.service \
    "${pkgdir}/usr/lib/systemd/system/carbonio-mailbox-admin-sidecar.service"
  install -Dm644 packages/appserver-service/carbonio-mailbox-nslookup-sidecar-legacy.service \
    "${pkgdir}/usr/lib/systemd/system/carbonio-mailbox-nslookup-sidecar.service"
}

_package_systemd() {
  # systemd unit
  install -Dm644 packages/appserver-service/carbonio-appserver.service \
    "${pkgdir}/usr/lib/systemd/system/carbonio-appserver.service"
  install -Dm644 packages/appserver-service/carbonio-mailbox-sidecar.service \
    "${pkgdir}/usr/lib/systemd/system/carbonio-mailbox-sidecar.service"
  install -Dm644 packages/appserver-service/carbonio-mailbox-admin-sidecar.service \
    "${pkgdir}/usr/lib/systemd/system/carbonio-mailbox-admin-sidecar.service"
  install -Dm644 packages/appserver-service/carbonio-mailbox-nslookup-sidecar.service \
    "${pkgdir}/usr/lib/systemd/system/carbonio-mailbox-nslookup-sidecar.service"
}

package() {
  _package
  _package_systemd
}

package__rocky_8() {
  _package
  _package_legacy
}

package__rocky_9() {
  _package
  _package_systemd
}

package__ubuntu_jammy() {
  _package
  _package_legacy
}

package__ubuntu_noble() {
  _package
  _package_systemd
}

postinst() {
  # Create carbonio-mailbox user/group and add zextras to carbonio-mailbox group
  # Note: zextras user/group is created by carbonio-core sysusers.d
  systemd-sysusers /usr/lib/sysusers.d/carbonio-appserver-service.conf >/dev/null 2>&1 || :

  if [ -d /run/systemd/system ]; then
    systemctl daemon-reload &>/dev/null || :
    systemctl enable carbonio-mailbox-sidecar.service &>/dev/null || :
    systemctl enable carbonio-mailbox-admin-sidecar.service &>/dev/null || :
    systemctl enable carbonio-mailbox-nslookup-sidecar.service &>/dev/null || :
  fi

  echo "======================================================"
  echo "Carbonio Mailbox Service installed successfully!"
  echo "You must run pending-setups to configure it correctly."
  echo "======================================================"
}

prerm() {
  if [ -d /run/systemd/system ]; then
    systemctl --no-reload disable --now carbonio-mailbox-sidecar.service &>/dev/null || :
    systemctl --no-reload disable --now carbonio-mailbox-admin-sidecar.service &>/dev/null || :
    systemctl --no-reload disable --now carbonio-mailbox-nslookup-sidecar.service &>/dev/null || :
  fi
}

postrm() {
  rm -f /etc/carbonio/mailbox/service-discover/token
  rm -f /etc/carbonio/mailbox-admin/service-discover/token
  rm -f /etc/carbonio/mailbox-nslookup/service-discover/token

  if [ -d /run/systemd/system ]; then
    systemctl daemon-reload &>/dev/null || :
  fi
}
