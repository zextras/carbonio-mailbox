pkgname="carbonio-appserver-war"
pkgver="4.15.0"
pkgrel="1"
pkgdesc="Carbonio Mailbox Service War"
arch=('x86_64')
maintainer="Zextras <packages@zextras.com>"
copyright=(
  "2022-2024, Zextras <https://www.zextras.com>"
  "2022, Synacor, Inc."
)
license=(
  "GPL-2.0-only"
)
url="https://github.com/zextras"
makedepends=(
  "unzip"
)
section="mail"
priority="optional"

package() {
  cd "${srcdir}"/../../staging

  install -D store/target/zm-store*jar-with-dependencies.jar \
    "${pkgdir}/opt/zextras/mailbox/jars/mailbox.jar"

  install -D "store/conf/web.xml.production" \
    "${pkgdir}/opt/zextras/jetty_base/etc/service.web.xml.in"
}
